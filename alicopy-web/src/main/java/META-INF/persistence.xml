<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
    
	<persistence-unit name="alicopy"
		transaction-type="RESOURCE_LOCAL">
		<provider>
			org.apache.openjpa.persistence.PersistenceProviderImpl
		</provider>
		<class>com.shenma.top.imagecopy.entity.OwnCatInfo</class>
		<class>com.shenma.top.imagecopy.entity.OwnCatInfoItem</class>
		<class>com.shenma.top.imagecopy.entity.CollectProduct</class>
		<properties>
			<property name="openjpa.ConnectionDriverName"
				value="com.mysql.jdbc.Driver" />
			<property name="openjpa.ConnectionURL"
				value="jdbc:mysql://localhost:3306/taobaocopy" />
			<property name="openjpa.ConnectionUserName" value="root" />
		</properties>
	</persistence-unit>

</persistence>
